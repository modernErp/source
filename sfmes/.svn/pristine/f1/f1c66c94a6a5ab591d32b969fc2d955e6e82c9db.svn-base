    <select id="selectCa0100EtcAcrv_01" parameterType="LinkedHashMap" resultType="LinkedHashMap">
     SELECT /*+ selectCa0100EtcAcrv_01 */
            A.CORP_C                                            /* 회사코드             */
          , A.BZPL_C                                            /* 사업장코드           */
