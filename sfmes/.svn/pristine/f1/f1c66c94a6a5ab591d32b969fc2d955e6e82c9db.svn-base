    <update id="update_DEL_YN_FOR_TB_BD_M_ETC_ACRV_02" parameterType="LinkedHashMap">
        UPDATE /*+ update_DEL_YN_FOR_TB_BD_M_ETC_ACRV_02 */ TB_BD_M_ETC_ACRV
           SET 
               SLP_NML_YN          = #{SLP_NML_YN}            /* 전표정상여부         */
