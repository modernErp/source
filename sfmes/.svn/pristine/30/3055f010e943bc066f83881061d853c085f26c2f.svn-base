<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="sfmes.sqlmap.tb">
    <insert id="insert_TB_SY_M_DAY_DDL" parameterType="LinkedHashMap">
        INSERT INTO /*+ insert_TB_SY_M_DAY_DDL */ TB_SY_M_DAY_DDL
        (
              CORP_C              /* 회사코드             */
            , BZPL_C              /* 사업장코드           */
            , DDL_DT              /* 마감일자             */
            , DDL_YN              /* 마감여부             */
            , RMK_CNTN            /* 비고내용             */
            , FSRG_DTM            /* 최초등록일시         */
            , FSRG_ID             /* 최초등록자ID         */
            , LSCHG_DTM           /* 최종변경일시         */
            , LSCHG_ID            /* 최종변경자ID         */
        )
        VALUES
        (
              #{CORP_C}
            , #{BZPL_C}
            , #{DDL_DT}
            , #{DDL_YN}
            , #{RMK_CNTN}
            , GETDATE()
            , #{GUSRID}
            , GETDATE()
            , #{GUSRID}
        )
    </insert>

    <update id="update_TB_SY_M_DAY_DDL" parameterType="LinkedHashMap">
        UPDATE /*+ update_TB_SY_M_DAY_DDL */ TB_SY_M_DAY_DDL
           SET 
               CORP_C              = #{CORP_C}                /* 회사코드             */
             , BZPL_C              = #{BZPL_C}                /* 사업장코드           */
             , DDL_DT              = #{DDL_DT}                /* 마감일자             */
             , DDL_YN              = #{DDL_YN}                /* 마감여부             */
             , RMK_CNTN            = #{RMK_CNTN}              /* 비고내용             */
             , LSCHG_DTM           = GETDATE()                /* 최종변경일시         */
             , LSCHG_ID            = #{GUSRID}                /* 최종변경자ID         */
         WHERE 1=1 
           AND BZPL_C              = #{BZPL_C}
           AND CORP_C              = #{CORP_C}
           AND DDL_DT              = #{DDL_DT}
    </update>

    <delete id="delete_TB_SY_M_DAY_DDL" parameterType="LinkedHashMap">
        DELETE /*+ delete_TB_SY_M_DAY_DDL */ FROM TB_SY_M_DAY_DDL
         WHERE 1=1 
           AND BZPL_C              = #{BZPL_C}
           AND CORP_C              = #{CORP_C}
           AND DDL_DT              = #{DDL_DT}
    </delete>

    <select id="select_TB_SY_M_DAY_DDL" parameterType="LinkedHashMap" resultType="LinkedHashMap">
        SELECT /*+ select_TB_SY_M_DAY_DDL */
               A.CORP_C                                            /* 회사코드             */
             , A.BZPL_C                                            /* 사업장코드           */
             , A.DDL_DT                                            /* 마감일자             */
             , A.DDL_YN                                            /* 마감여부             */
             , A.RMK_CNTN                                          /* 비고내용             */
             , CONVERT(CHAR(23), A.FSRG_DTM, 20)  AS   FSRG_DTM    /* 최초등록일시         */
             , A.FSRG_ID                                           /* 최초등록자ID         */
             , CONVERT(CHAR(23), A.LSCHG_DTM, 20) AS   LSCHG_DTM   /* 최종변경일시         */
             , A.LSCHG_ID                                          /* 최종변경자ID         */
          FROM TB_SY_M_DAY_DDL A
         WHERE 1=1 
           AND A.BZPL_C            = #{BZPL_C}
           AND A.CORP_C            = #{CORP_C}
           AND A.DDL_DT            = #{DDL_DT}
    </select>
</mapper>